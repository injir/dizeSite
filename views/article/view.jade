extends ../layouts/navigation


block content
	div.row
		a(href='/articles/create')='Create'
	div
		each val in model
			article.item
				a(href='#').image.fit
					img(src='/upload/article/background/'+val._id+'.jpg' width=200 height=200)
				header
					h3=val.title	
				p=val.body
					p=val.author
					a(href='/delete/'+val._id)='Удалить'	
				hr
				